<!-- banner-section -->
<section class="banner-section">
    <div class="container">
        <div class="banner-section-inner">
            {% set bannerText = banners[0].title|split('|') %}
            <div class="banner-section-img">
                <img src="{{ banners[0].image }}" alt="{{ bannerText[2] }}">
            </div>
            <div class="banner-section-content">
                <h2>{{ bannerText[0] }}</h2>
                <p>{{ bannerText[1] }}</p>
            </div>
        </div>
    </div>
</section>

